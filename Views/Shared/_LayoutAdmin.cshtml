<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Sistema</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-lg navbar-dark bg-primary">
            <div class="container-fluid">
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <a class="navbar-brand text-center" href="#">Sistema</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-target="#navbarColor01" aria-controls="navbarColor01" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <div class="collapse navbar-collapse" id="navbarColor01">
                    <ul class="navbar-nav mr-auto">
                        <li class="nav-item active">
                            <a class="nav-link" href="/">Inicio <span class="sr-only"></span></a>
                        </li>
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" data-bs-toggle="dropdown" href="#" id="themes">Administrar <span class="caret"></span></a>
                            <div class="dropdown-menu" aria-labelledby="categorias">
                                <a class="dropdown-item" asp-action="Listar" asp-controller="Producto">Productos</a>
                                <a class="dropdown-item" asp-action="Listar" asp-controller="Proveedor">Proveedores</a>
                                <a class="dropdown-item" asp-action="Listar" asp-controller="Usuario">Usuarios</a>
                            </div>
                        </li>
                    </ul>
                    <ul class="navbar-nav ms-auto">
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" href="#" id="cuenta" data-bs-toggle="dropdown" aria-haspopup="true" aria-expanded="false">Cuenta <span class="caret"></span></a>
                            <div class="dropdown-menu dropdown-menu-end" aria-labelledby="cuenta">
                                <a class="dropdown-item" asp-action="CambiarUsuario" asp-controller="Cuenta">Cambiar Usuario</a>
                                <a class="dropdown-item" asp-action="CambiarClave" asp-controller="Cuenta">Cambiar Clave</a>
                                <div class="dropdown-divider"></div>
                                <a asp-action="Salir" asp-controller="Administracion" class="dropdown-item">Salir</a>
                            </div>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pt-5">
            @{
                if (ViewBag.mensaje != null)
                {
                    @Html.Raw(ViewBag.mensaje);
                }
            }
            @RenderBody()
        </main>
    </div>

    <footer>
        <div class="container text-center">
            <p>Copyright &copy; Ismael Heredia 2023 &middot; All Rights Reserved &middot;</p>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
