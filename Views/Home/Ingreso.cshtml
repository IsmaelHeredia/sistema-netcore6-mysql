@model IngresoModel
@{
    ViewData["Title"] = "Home Page";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="card ingreso">
    <div class="card-header">Ingreso</div>
    <div class="card-body">
        <form asp-action="Ingreso" asp-controller="Home" method="post">
            <div class="mb-3">
                <label class="form-label">Usuario</label>
                <input asp-for="Usuario" type="text" class="form-control">
                <span asp-validation-for="Usuario" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label class="form-label">Clave</label>
                <input asp-for="Clave" type="password" class="form-control">
                <span asp-validation-for="Clave" class="text-danger"></span>
            </div>
            <button type="submit" class="btn btn-primary">Ingreso</button>
        </form>
    </div>
</div>