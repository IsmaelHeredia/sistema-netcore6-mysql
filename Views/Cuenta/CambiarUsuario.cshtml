@model CambiarUsuarioModel
@{
    ViewData["Title"] = "Home Page";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="card">
    <div class="card-header">Cambiar usuario</div>
    <div class="card-body">
        <form asp-action="CambiarUsuario" asp-controller="Cuenta" method="post">
            <input asp-for="Id" type="hidden" class="form-control">
            <div class="mb-3">
                <label class="form-label">Usuario actual</label>
                <input asp-for="Usuario_actual" type="text" class="form-control" readonly>
                <span asp-validation-for="Usuario_actual" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label class="form-label">Nuevo usuario</label>
                <input asp-for="Nuevo_usuario" type="text" class="form-control">
                <span asp-validation-for="Nuevo_usuario" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label class="form-label">Clave actual</label>
                <input asp-for="Clave_actual" type="password" class="form-control">
                <span asp-validation-for="Clave_actual" class="text-danger"></span>
            </div>
            <button type="submit" class="btn btn-primary">Guardar</button>
            <a asp-action="Index" asp-controller="Administracion" class="btn btn-info">Volver</a>
        </form>
    </div>
</div>